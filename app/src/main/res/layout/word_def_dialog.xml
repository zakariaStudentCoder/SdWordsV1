<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/panel_bg"
    android:padding="5dp"
   >


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/panel_bg"
        android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/speedtest_results_rag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/speedtest_rag_green" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WORD"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorBlueDarkH"
        android:id="@+id/textWord"
        android:layout_gravity="center_horizontal" />

        />

        <ImageView
            android:id="@+id/speedtest_results_rag_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/speedtest_rag_green" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="8dp"
        android:background="@drawable/panel_bg"
        android:layout_gravity="top">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:padding="2dp"
            android:textColor="@color/colorDarkerText"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="A genus of malvaceous plants of many species, found in the torrid and temperate zones of both continents; -- called also Indian mallow."
            android:id="@+id/textDefinition" />

    </LinearLayout>

    <Button
        android:id="@+id/btnOK"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:animateLayoutChanges="true"
        android:text="OK"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:background="@drawable/button_blue"
        >
    </Button>
</LinearLayout>